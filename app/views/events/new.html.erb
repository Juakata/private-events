<%= link_to "Go back", current_user %>
<h1>Create new event</h1>
<% if @event.errors.any? %>
<ul>
  <% @event.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
<%= form_for(@event) do |f| %>
  <%= f.date_field :date %>
  <%= f.text_field :description %>
  <%= f.submit "Create event!" %>
<% end %>
